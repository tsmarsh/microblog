{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "properties": {
    "handle": {
      "type": "string",
      "faker": "internet.userName",
      "description": "User's unique handle"
    },
    "name": {
      "type": "string",
      "faker": "person.fullName",
      "description": "User's name"
    },
    "avatar": {
      "type": "string",
      "faker": "internet.avatar",
      "description": "User's stupid face"
    },
    "bio": {
      "type": "string",
      "faker": "person.bio",
      "description": "What people thing about themselves"
    }
  },
  "required": ["handle", "name"]
}
