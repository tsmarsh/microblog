{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DirectMessage",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the user sending the message"
    },
    "receiver_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the user receiving the message"
    },
    "message": {
      "type": "string",
      "faker": "lorum.text",
      "description": "Message content"
    }
  },
  "required": ["user_id", "receiver_id", "message"]
}
