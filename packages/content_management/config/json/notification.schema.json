{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notification",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the user to receive the notification"
    },
    "message": {
      "type": "string",
      "faker": "lorem.text",
      "description": "Notification message"
    }
  },
  "required": ["user_id", "message"]
}
