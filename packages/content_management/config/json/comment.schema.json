{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comment",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the user who wrote the comment"
    },
    "post_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identifier for the post on which the comment was written"
    },
    "content": {
      "type": "string",
      "faker": "lorem.text",
      "description": "Content of the comment"
    }
  },
  "required": ["user_id", "post_id", "content"]
}
